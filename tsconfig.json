{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "rootDirs": ["src", "config"],
        "outDir": "dist",
        "esModuleInterop": true,
        "sourceMap": true,
        "strict": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*",
        "config"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
